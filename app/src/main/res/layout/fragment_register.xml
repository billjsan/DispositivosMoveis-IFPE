<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.access.RegisterFragment">

    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:text="AirPower Register"
        android:textSize="@dimen/card_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/ed_register_name"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_margin="@dimen/card_margin"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textSize="@dimen/card_label"
        app:layout_constraintEnd_toEndOf="@+id/tv_register_title"
        app:layout_constraintStart_toStartOf="@+id/tv_register_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_title" />

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_margin="@dimen/card_margin"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/card_label"
        app:layout_constraintEnd_toEndOf="@+id/ed_register_name"
        app:layout_constraintStart_toStartOf="@+id/ed_register_name"
        app:layout_constraintTop_toBottomOf="@+id/ed_register_name" />

    <EditText
        android:id="@+id/tv_register_password"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_margin="@dimen/card_margin"
        android:ems="10"
        android:hint="Pasword"
        android:inputType="textPassword"
        android:textSize="@dimen/card_label"
        app:layout_constraintEnd_toEndOf="@+id/et_register_email"
        app:layout_constraintStart_toStartOf="@+id/et_register_email"
        app:layout_constraintTop_toBottomOf="@+id/et_register_email" />

    <EditText
        android:id="@+id/et_register_password_confirmation"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_margin="@dimen/card_margin"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="@dimen/card_label"
        app:layout_constraintEnd_toEndOf="@+id/tv_register_password"
        app:layout_constraintStart_toStartOf="@+id/tv_register_password"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_password" />

    <Button
        android:id="@+id/bt_register_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/et_register_password_confirmation"
        app:layout_constraintStart_toStartOf="@+id/et_register_password_confirmation"
        app:layout_constraintTop_toBottomOf="@+id/et_register_password_confirmation" />

</androidx.constraintlayout.widget.ConstraintLayout>