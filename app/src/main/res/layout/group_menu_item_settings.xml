<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_corner">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/airpower_banner" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin"
                android:text="Group Settings"
                android:textSize="@dimen/card_title"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <LinearLayout
                android:id="@+id/layout_banner_menu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <Button
                    android:id="@+id/bt_group_menu_item_add_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_menu_button_height"
                    android:text="New Group"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/card_group_menu_button_text_size" />

                <Button
                    android:id="@+id/bt_group_menu_item_edit_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_menu_button_height"
                    android:text="Edit group"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/card_group_menu_button_text_size" />

                <Button
                    android:id="@+id/bt_group_menu_item_delete_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_menu_button_height"
                    android:text="Delete Group"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/card_group_menu_button_text_size" />

                <Button
                    android:id="@+id/bt_group_menu_item_add_guest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_menu_button_height"
                    android:text="Add Guest"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/card_group_menu_button_text_size" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>